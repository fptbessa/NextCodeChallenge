@model IEnumerable<NextCodeChallenge.Models.Entities.Topic>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the XPTO Forum</h1>
</div>

<div class="row">
    <div class="col">
        <h5>Below are the existing topics for this forum, or you can create a new one.</h5>
        <div><a asp-controller="Topics" asp-action="Create">Create New Topic</a></div>
    </div>

</div>
<div class="row">
    <table class="table table-responsive table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Created By</th>
                <th>Creation Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Topics" asp-action="Details" asp-route-id="@item.TopicId">@Html.DisplayFor(modelItem => item.Title)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatorUser.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>
                <td>
                    <a asp-controller="Topics" asp-action="Edit" asp-route-id="@item.TopicId">Edit</a> |
                    <a asp-controller="Topics" asp-action="Delete" asp-route-id="@item.TopicId">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>
